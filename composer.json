{
  "name": "martin-drahony/craft-murmurations",
  "description": "Upgrade the boring login screen with a murmuration of birds",
  "type": "craft-plugin",
  "license": "MIT",
  "require": {
    "craftcms/cms": "^4.0.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "martindrahony\\craftmurmurations\\": "src/"
    }
  },
  "extra": {
    "handle": "murmurations",
    "name": "Murmurations",
    "developer": "MartinDrahony",
    "documentationUrl": ""
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}